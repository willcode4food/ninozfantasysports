{
    "env": {
        "browser": true,
        "es6": true,
        "amd": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jest/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": ["react", "@emotion"],
    "rules": {
        "@emotion/pkg-renaming": "error",
        "@emotion/jsx-import": "error"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
